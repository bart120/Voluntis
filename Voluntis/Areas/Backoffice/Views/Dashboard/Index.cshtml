@model IEnumerable<Voluntis.Models.Category>
@{
    ViewData["Title"] = "Tableau de bord";
}


<h1>Dashboard</h1>

<div class="row">
    <div class="col">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ID</th>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col">
        <ul class="list-group">
            @foreach (var item in ViewBag.users as IEnumerable<Voluntis.Models.User>)
            {
            <li class="list-group-item">
                @item.Email
            </li>
            }
        </ul>
    </div>
</div>